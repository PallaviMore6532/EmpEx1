@model EmpEx1.Models.EmpEducation


<html>
    <head>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

</head>
    <body>
    <div class="Container">
        <div class="row">

          

            <div class="bg-primary-subtle">

                <h4>Edit Employee Information</h4>

                <form class="forms-sample border-black" asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>
                    <input type="hidden" asp-for="EmpID" value="@Context.Session.GetString("EmpID")" />
                    <input type="hidden" asp-for="EmpEducationID" />


                    <div class="form-group row">
                        <label asp-for="CollegeName" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="CollegeName" class="form-control  border-dark" placeholder="name">
                            <span asp-validation-for="CollegeName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Field" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="Field" class="form-control border-dark" placeholder="name">
                            <span asp-validation-for="Field" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="TotalMarks" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="TotalMarks" class="form-control border-dark" placeholder="name">
                            <span asp-validation-for="TotalMarks" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="ObtainMarks" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="ObtainMarks" class="form-control border-dark" placeholder="name">
                            <span asp-validation-for="ObtainMarks" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="standard" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="standard" class="form-control border-dark" placeholder="name">
                            <span asp-validation-for="standard" class="text-danger"></span>
                        </div>
                    </div>





                    <button type="submit" class="btn btn-light">Edit</button>
                    <button class="btn btn-light" asp-action="Index">Back</button>
                </form>
            </div>

        </div>
    </div>
    </body>
</html>


